<section class="bg-primary-700">
  <div class="px-6 py-24 sm:px-6 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-semibold tracking-tight text-balance text-white sm:text-5xl">Let’s make your next ride simple.</h2>
      <p class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-primary-200">No apps. No surge pricing. Just a clean car, a friendly driver, and a smooth experience from start to finish.</p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <%= link_to rides_path, class: "inline-flex items-center gap-x-2 rounded-full bg-white px-3.5 py-2.5 text-sm font-semibold text-primary-600 shadow-xs hover:bg-primary-50 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white" do %>
          Book a ride
          <i class="fa-duotone fa-regular fa-car-side -mr-0.5"></i>
        <% end %>
