<header class="sticky -mb-10 backdrop-blur-3xl inset-x-0 top-0 z-50">
  <nav aria-label="Global" class="flex items-center justify-between p-6 lg:px-8">
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">Turtle Cab</span>
        <%= render "icon_turtle_cab", class: "h-8 w-auto", dark_mode: true %>
      <% end %>
    </div>
    <div class="flex lg:hidden">
      <button type="button" command="show-modal" commandfor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-stone-400">
        <span class="sr-only">Open main menu</span>
        <i class="fa-duotone fa-regular fa-bars" data-slot="icon" aria-hidden="true"></i>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "Pricing", pricing_path, class: "text-sm/6 text-shadow-sm font-semibold text-white" %>
      <%= link_to "About", about_path, class: "text-sm/6 text-shadow-sm font-semibold text-white" %>
      <%= link_to "Contact", contact_path, class: "text-sm/6 text-shadow-sm font-semibold text-white" %>
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <%= link_to rides_path, class: "inline-flex items-center gap-x-1.5 rounded-full bg-primary-600 px-2.5 py-1 text-sm font-semibold text-white shadow-xs hover:bg-primary-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" do %>
        Book a ride
        <i class="fa-duotone fa-regular fa-car-side"></i>
      <% end %>
    </div>
  </nav>
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
      <div tabindex="0" class="fixed inset-0 focus:outline-none">
        <el-dialog-panel class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-stone-900 p-6 sm:max-w-sm sm:ring-1 sm:ring-stone-100/10">
          <div class="flex items-center justify-between">
            <a href="#" class="-m-1.5 p-1.5">
              <span class="sr-only">Turtle Cab</span>

              <%= render "icon_turtle_cab", class: "h-8 w-auto", dark_mode: true %>
            </a>
            <button type="button" command="close" commandfor="mobile-menu" class="-m-2.5 rounded-md p-2.5 text-stone-400">
              <span class="sr-only">Close menu</span>
              <i class="fa-duotone fa-regular fa-xmark"></i>
            </button>
          </div>
          <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-stone-500/25">
              <div class="space-y-2 py-6">
                <%= link_to "Pricing", pricing_path, class: "-mx-3 block rounded-full px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5" %>
                <%= link_to "About", about_path, class: "-mx-3 block rounded-full px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5" %>
                <%= link_to "Contact", contact_path, class: "-mx-3 block rounded-full px-3 py-2 text-base/7 font-semibold text-white hover:bg-white/5" %>
              </div>
              <div class="py-6">
                <%= link_to rides_path, class: "inline-flex items-center gap-x-2 -mx-3 block rounded-full px-3 py-2.5 text-base/7 font-semibold text-white hover:bg-white/5" do %>
                  Book a ride
                  <i class="fa-duotone fa-regular fa-car-side"></i>
                <% end %>
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>
